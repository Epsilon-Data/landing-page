---
import type {CollectionEntry} from "astro:content";
import { Image } from "astro:assets";
import studyImage from "../../public/images/study.png";
import MainFeature from "./MainFeature.astro";

type Props = {
    main_features: CollectionEntry<"main_feature">[]
}

const { main_features } = Astro.props;
---

<div class="w-full min-h-screen flex items-start px-10 py-30">
  <div class="h-full hide-scrollbar overflow-y-scroll flex flex-col gap-24 pr-6 snap-y snap-mandatory flex-1 mr-50">
    {main_features.map((feature) => (
      <div class="snap-start">
        <MainFeature item={feature} />
      </div>
    ))}
  </div>

  <div class="w-[40%] h-screen flex items-start mr-30 sticky top-[76px]">
    <Image src={studyImage} alt="study-image" class="rounded-xl border-2 border-white mt-30"/>
  </div>
</div>