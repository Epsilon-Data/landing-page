---
const { title, color, indent = 0, showArrow = false } = Astro.props;
---

<div class="flex mb-6" style={`margin-left: ${indent * 1.5}rem`}>
  <div class="relative w-6 flex flex-col items-center">
    <!-- Top square -->
    <div class="w-6 h-4 rounded-sm mt-1 ml-1.5" style={`background-color: ${color}`} />

    {showArrow && (
      <div class="relative flex-grow w-full flex justify-center">
        <!-- Vertical line -->
        <div class="absolute top-1 right-4 w-px" style={`background-color: ${color}; bottom: -2.25rem`} />
        <!-- Bottom L connector -->
        <div class="absolute -bottom-10 left-1/2 transform -translate-x-1/3 flex items-center">
          <!-- Horizontal line -->
          <div class="w-2 h-px" style={`background-color: ${color}`} />
          <!-- Circle -->
          <div class="w-2 h-2 rounded-full" style={`background-color: ${color}`} />
        </div>
      </div>
    )}
  </div>

  <div class="ml-4 [font-family:'Maven_Pro'] flex-1">
    <h1 class="mb-2 font-medium" style={`color: ${color}`}>
      {title}
    </h1>
    <div class="text-black">
      <slot />
    </div>
  </div>
</div>
