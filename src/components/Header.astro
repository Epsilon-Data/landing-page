---
import Logo from "./Logo.astro";
---

<nav class="flex flex-col gap-4 items-center w-full backdrop-blur-[22px] bg-neutral-800 bg-opacity-90 sticky top-0 z-50shadow-md z-50" aria-label="Main navigation">
  <div class="flex justify-between items-center px-20 py-3 w-full h-[76px] max-w-[1512px] max-md:px-10 max-md:py-3 max-sm:px-5 max-sm:py-3">
    <a href="/" aria-label="Epsilon home">
      <Logo />
    </a>

    <!-- Brand name -->
    <div class="flex gap-1 items-start p-2.5">
      <h1 class="relative -top-2 text-4xl font-bold tracking-tighter h-[37px] left-[-145px] text-neutral-50 w-[151px]">
        epsilon
      </h1>
    </div>

    <!-- Navigation links -->
    <div class="flex gap-4 justify-center items-center pl-32 max-md:pl-16 max-sm:hidden" role="navigation" aria-label="Main menu">
      <a href="/features" class="gap-1 px-4 pt-3.5 pb-3 h-12 text-base font-medium leading-6 text-center rounded-lg cursor-pointer text-neutral-100 hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-neutral-400">
        Features
      </a>
      <a href="/about" class="gap-1 px-4 pt-3.5 pb-3 h-12 text-base font-medium leading-6 text-center rounded-lg cursor-pointer text-neutral-100 hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-neutral-400">
        About Us
      </a>
      <a href="/help" class="gap-1 px-4 pt-3.5 pb-3 h-12 text-base font-medium leading-6 text-center rounded-lg cursor-pointer text-neutral-100 hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-neutral-400">
        Help
      </a>
    </div>

    <!-- Authentication buttons -->
    <div class="flex gap-4 items-center max-sm:gap-2">
      <button
        type="button"
        class="px-4 py-2 h-10 text-base font-medium rounded-lg cursor-pointer bg-[rgba(245,245,245,0.15)] text-neutral-100 w-[92px] hover:bg-opacity-20 focus:outline-none focus:ring-2 focus:ring-neutral-400"
        aria-label="Sign In"
      >
        Sign In
      </button>
      <button
        type="button"
        class="flex gap-2 justify-center items-center p-2 w-40 rounded-lg cursor-pointer max-sm:w-auto hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-neutral-400 bg-[linear-gradient(135deg,_#1481F1_39.75%,_#014FE9_87.11%)]"
        aria-label="Get Started"
      >
        <span class="text-base font-medium leading-6 text-center text-neutral-50">
          Get Started
        </span>
        <svg
          width="24"
          height="25"
          viewBox="0 0 24 25"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          class="chevron-right"
          aria-hidden="true"
        >
          <g clip-path="url(#clip0_595_1301)">
            <path
              d="M8.29492 7.82504L12.8749 12.415L8.29492 17.005L9.70492 18.415L15.7049 12.415L9.70492 6.41504L8.29492 7.82504Z"
              fill="#F5F5F5"
            ></path>
          </g>
          <defs>
            <clipPath id="clip0_595_1301">
              <rect
                width="24"
                height="24"
                fill="white"
                transform="translate(0 0.119995)"
              ></rect>
            </clipPath>
          </defs>
        </svg>
      </button>
    </div>

    <!-- Mobile menu button (hidden in the design but added for completeness) -->
    <button
      id="mobile-menu-button"
      type="button"
      class="hidden p-2 rounded-md text-neutral-100 hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-neutral-400"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label="Toggle mobile menu"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile menu (hidden by default) -->
  <div id="mobile-menu" class="hidden w-full px-5 py-3 bg-neutral-800 max-sm:block" aria-label="Mobile navigation">
    <div class="flex flex-col space-y-2">
      <a href="/features" class="px-4 py-2 text-base font-medium text-neutral-100 rounded-lg hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-neutral-400">
        Features
      </a>
      <a href="/about" class="px-4 py-2 text-base font-medium text-neutral-100 rounded-lg hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-neutral-400">
        About Us
      </a>
      <a href="/help" class="px-4 py-2 text-base font-medium text-neutral-100 rounded-lg hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-neutral-400">
        Help
      </a>
    </div>
  </div>
</nav>
